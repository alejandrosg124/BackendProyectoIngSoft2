generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  nombre     String
  email      String   @unique
  telefono   String
  fotoPerfil String?  @map("foto_perfil")
  contrasena String?

  @@map("Usuarios")
}

model Publicacion {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  publicacionId String     @map("publicacion_id") @unique @db.ObjectId
  usuarioId     String     @map("usuario_id") @db.ObjectId
  titulo        String
  descripcion   String
  ubicacion     Ubicacion
  precioNoche   String     @map("precio_noche")
  imagenes      String[]

  @@map("Publicaciones")
}

type Ubicacion {
  pais      String
  ciudad    String
  direccion String @map("ubicacion")
}

model Resena {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  resenaId      String   @map("id_resena") @unique @db.ObjectId
  usuarioId     String   @map("usuario_id") @db.ObjectId
  publicacionId String   @map("publicacion_id") @db.ObjectId
  calificacion  Int
  fechaResena   DateTime @map("fecha_resena")
  comentario    String

  @@map("Resenas")
}

model Mensaje {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  mensajeId         String @map("mensaje_id") @unique @db.ObjectId
  usuarioReceptorId String @map("usuario_receptor") @db.ObjectId
  usuarioEmisorId   String @map("usuario_emisor") @db.ObjectId
  texto             String

  @@map("Mensajes")
}

model Reservacion {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  reservacionId  String       @map("reservacion_id") @unique @db.ObjectId
  usuarios       UsuarioRol[]
  publicacionId  String       @map("publicacion_id") @db.ObjectId
  fechaInicio    DateTime     @map("fecha_inicio")
  fechaFin       DateTime     @map("fecha_fin")
  costoTotal     Float        @map("costo_total")
  precioServicio String

  @@map("Reservaciones")
}

type UsuarioRol {
  usuarioId      String @map("usuario_id") @db.ObjectId
  rolReservacion String @map("rol_reservacion")
}
